<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Dashboard | Zippy</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	<link href="/main/dashboard/css/index.css" rel="stylesheet">
</head>
<body>
	<!-- Navigation -->
	<nav class="navbar navbar-expand-lg fixed-top glass-nav">
		<div class="container">
			<a href="/" class="navbar-brand d-flex align-items-center text-decoration-none">
				<i class="fas fa-link fs-3 me-2" style="color: #667eea;"></i>
				<span class="brand-logo fs-3">Zippy</span>
			</a>
			<div class="d-flex align-items-center">
				<div class="stats-badge-nav me-3 d-none d-md-block">
					<i class="fas fa-chart-line me-1"></i> 
					<span id="stat-badge-count" class="fw-bold">-</span> Links
				</div>
				<a href="/" class="btn btn-outline-light btn-custom">
					<i class="fas fa-home me-2"></i>
					Home
				</a>
			</div>
		</div>
	</nav>

	<!-- Hero Header -->
	<section class="dashboard-hero">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-8">
					<div class="hero-content">
						<div class="d-flex align-items-center mb-3">
							<div class="hero-icon me-3">
								<i class="fas fa-chart-line"></i>
							</div>
							<div>
								<h1 class="hero-title mb-0">Dashboard</h1>
								<p class="hero-subtitle mb-0">Manage and monitor all your shortened URLs</p>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-4 text-lg-end">
					<div class="stats-container">
						<div class="stat-card">
							<div class="stat-icon">
								<i class="fas fa-link"></i>
							</div>
							<div class="stat-content">
								<div id="stat-number" class="stat-number">-</div>
								<div class="stat-label">Total Links</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Main Content -->
	<main class="main-content">
		<div class="container">
			<!-- URLs Table -->
			<div class="table-container">
				<!-- Table Header -->
				<div class="table-header">
					<div class="d-flex align-items-center justify-content-between">
						<h3 class="table-title mb-0">
							<i class="fas fa-table me-2"></i>
							Your Shortened URLs
						</h3>
					</div>
				</div>

				<!-- Table Content -->
				<div class="table-content">
					<div class="table-responsive">
						<table class="table table-hover custom-table">
							<thead>
								<tr>
									<th class="table-header-cell">
										<div class="header-content">
											<i class="fas fa-hashtag me-2 header-icon"></i>
											<span class="header-text">Index</span>
										</div>
									</th>
									<th class="table-header-cell">
										<div class="header-content" style="width: 120px;">
											<i class="fas fa-compress-alt me-2 header-icon"></i>
											<span class="header-text">Short URL</span>
										</div>
									</th>
									<th class="table-header-cell">
										<div class="header-content">
											<i class="fas fa-external-link-alt me-2 header-icon"></i>
											<span class="header-text">Redirect URL</span>
										</div>
									</th>
									<th class="table-header-cell">
										<div class="header-content">
											<i class="fas fa-computer-mouse me-2 header-icon"></i>
											<span class="header-text">Clicks</span>
										</div>
									</th>
									<th class="table-header-cell">
										<div class="header-content">
											<i class="fas fa-calendar-plus me-2 header-icon"></i>
											<span class="header-text">Created</span>
										</div>
									</th>
									<th class="table-header-cell">
										<div class="header-content">
											<i class="fas fa-calendar-check me-2 header-icon"></i>
											<span class="header-text">Updated</span>
										</div>
									</th>
									<th class="table-header-cell text-center">
										<div class="header-content justify-content-center">
											<i class="fas fa-cogs me-2 header-icon"></i>
											<span class="header-text">Actions</span>
										</div>
									</th>
								</tr>
							</thead>
							<tbody id="table-body-data"></tbody>
						</table>
					</div>
				</div>

				<!-- Pagination Section  -->
				<div class="pagination-container">
					<nav aria-label="Table pagination" class="pagination-nav">
						<ul class="pagination pagination-custom mb-0" id="paginationList">								
							<!-- Previous Page Button -->
							<li class="page-item" id="prevPageItem">
								<button class="page-link page-control" id="prevPage" title="Previous page">
									<i class="fas fa-angle-left"></i>
								</button>
							</li>
								
							<!-- Page Numbers Container -->
							<div class="page-numbers" id="pageNumbers">
								<!-- Dynamic page numbers will be inserted here -->
							</div>
								
							<!-- Next Page Button -->
							<li class="page-item" id="nextPageItem">
								<button class="page-link page-control" id="nextPage" title="Next page">
									<i class="fas fa-angle-right"></i>
								</button>
							</li>
						</ul>
					</nav>

					<!-- Mobile Pagination (Simplified for small screens) -->
					<div class="mobile-pagination d-md-none">
						<button class="btn btn-sm mobile-page-control" id="mobilePrev" disabled>
							<i class="fas fa-chevron-left me-1"></i>
							Previous
						</button>
							
						<span class="mobile-page-info mx-3">
							Page <span id="currentPageMobile">1</span> of <span id="totalPagesMobile">1</span>
						</span>
							
						<button class="btn btn-sm mobile-page-control" id="mobileNext">
							Next
							<i class="fas fa-chevron-right ms-1"></i>
						</button>
					</div>
				</div>
			</div>
		</div>
	</main>

	<!-- Edit Modal -->
	<div class="modal fade" id="editModal" tabindex="-1">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content custom-modal">
				<div class="modal-header border-0">
					<h5 class="modal-title">
						<i class="fas fa-edit me-2 text-primary"></i>
						Edit URL
					</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<form id="editForm">
					<div class="modal-body">
						<div class="mb-3">
							<label class="form-label fw-semibold">
								<i class="fas fa-link me-2 text-primary"></i>
								Redirect URL
							</label>
							<input type="url" 
								   id="editUrlInput" 
								   name="originalUrl" 
								   required
								   class="form-control form-control-lg custom-input">
						</div>
					</div>
					<div class="modal-footer border-0">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
							Cancel
						</button>
						<button type="submit" class="btn btn-primary">
							<i class="fas fa-save me-1"></i>
							Save Changes
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Toast Notification -->
	<div class="toast-container position-fixed top-0 end-0 p-3">
		<div id="toast" class="toast custom-toast" role="alert">
			<div class="toast-header border-0">
				<i id="toastIcon" class="fas fa-check-circle text-success me-2"></i>
				<strong class="me-auto">Notification</strong>
				<button type="button" class="btn-close" data-bs-dismiss="toast"></button>
			</div>
			<div class="toast-body" id="toastMessage">
				Success!
			</div>
		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/main/dashboard/js/index.js"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Dashboard - Zippy</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	<link href="/main/dashboard/css/index.css" rel="stylesheet">
</head>
<body>
	<!-- Navigation -->
	<nav class="navbar navbar-expand-lg fixed-top glass-nav">
		<div class="container">
			<div class="navbar-brand d-flex align-items-center">
				<i class="fas fa-link fs-3 me-2" style="color: #667eea;"></i>
				<span class="brand-logo fs-3">Zippy</span>
			</div>
			<div class="d-flex align-items-center">
				<div class="stats-badge-nav me-3 d-none d-md-block">
					<i class="fas fa-chart-line me-1"></i> 
					<span class="fw-bold"><%= urls.length %></span> Links
				</div>
				<a href="/" class="btn btn-outline-light btn-custom">
					<i class="fas fa-home me-2"></i>
					Home
				</a>
			</div>
		</div>
	</nav>

	<!-- Hero Header -->
	<section class="dashboard-hero">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-8">
					<div class="hero-content">
						<div class="d-flex align-items-center mb-3">
							<div class="hero-icon me-3">
								<i class="fas fa-chart-line"></i>
							</div>
							<div>
								<h1 class="hero-title mb-0">Dashboard</h1>
								<p class="hero-subtitle mb-0">Manage and monitor all your shortened URLs</p>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-4 text-lg-end">
					<div class="stats-container">
						<div class="stat-card">
							<div class="stat-icon">
								<i class="fas fa-link"></i>
							</div>
							<div class="stat-content">
								<div class="stat-number"><%= urls.length %></div>
								<div class="stat-label">Total Links</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Quick Actions -->
	<section class="quick-actions">
		<div class="container">
			<div class="row g-3">
				<div class="col-md-6">
					<div class="action-card">
						<i class="fas fa-plus-circle action-icon"></i>
						<span>Create New</span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="action-card">
						<i class="fas fa-download action-icon"></i>
						<span>Export Data</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Main Content -->
	<main class="main-content">
		<div class="container">
			<!-- URLs Table -->
			<div class="table-container">
				<!-- Table Header -->
				<div class="table-header">
					<div class="d-flex align-items-center justify-content-between">
						<h3 class="table-title mb-0">
							<i class="fas fa-table me-2"></i>
							Your Shortened URLs
						</h3>
					</div>
				</div>

				<!-- Table Content -->
				<div class="table-content">
					<% if (urls && urls.length > 0) { %>
					<div class="table-responsive">
						<table class="table table-hover custom-table">
							<thead>
								<tr>
									<th class="table-header-cell">
										<div class="header-content">
											<i class="fas fa-hashtag me-2 header-icon"></i>
											<span class="header-text">Index</span>
										</div>
									</th>
									<th class="table-header-cell">
										<div class="header-content">
											<i class="fas fa-compress-alt me-2 header-icon"></i>
											<span class="header-text">Short URL</span>
										</div>
									</th>
									<th class="table-header-cell">
										<div class="header-content">
											<i class="fas fa-external-link-alt me-2 header-icon"></i>
											<span class="header-text">Redirect URL</span>
										</div>
									</th>
									<th class="table-header-cell">
										<div class="header-content">
											<i class="fas fa-calendar-plus me-2 header-icon"></i>
											<span class="header-text">Created</span>
										</div>
									</th>
									<th class="table-header-cell">
										<div class="header-content">
											<i class="fas fa-calendar-check me-2 header-icon"></i>
											<span class="header-text">Updated</span>
										</div>
									</th>
									<th class="table-header-cell text-center">
										<div class="header-content justify-content-center">
											<i class="fas fa-cogs me-2 header-icon"></i>
											<span class="header-text">Actions</span>
										</div>
									</th>
								</tr>
							</thead>
							<tbody>
								<% urls.forEach((url, index) => { %>
								<tr class="table-row" id="row-<%= url.id %>">
									<td class="table-cell">
										<div class="index-badge">
											<span><%= index + 1 %></span>
										</div>
									</td>
									<td class="table-cell">
										<div class="url-info">
											<div class="url-details">
												<div class="short-url">
													<code><%= url.shortUrl %></code>
												</div>
												<button onclick="copyToClipboard('/<%= url.shortUrl %>')" 
														class="copy-btn">
													<i class="fas fa-copy me-1"></i>
													Copy
												</button>
											</div>
										</div>
									</td>
									<td class="table-cell">
										<div class="original-url">
											<a href="<%= url.originalUrl %>" target="_blank" 
											   class="url-link" 
											   title="<%= url.originalUrl %>">
												<span class="url-text"><%= url.originalUrl %></span>
											</a>
										</div>
									</td>
									<td class="table-cell">
										<div class="date-info">
											<div class="date-details">
												<div class="date-primary"><%= url.dateCreated.toLocaleDateString() %></div>
												<div class="date-secondary"><%= url.dateCreated.toLocaleTimeString() %></div>
											</div>
										</div>
									</td>
									<td class="table-cell">
										<div class="date-info">
											<div class="date-details">
												<div class="date-primary"><%= url.dateUpdated.toLocaleDateString() %></div>
												<div class="date-secondary"><%= url.dateUpdated.toLocaleTimeString() %></div>
											</div>
										</div>
									</td>
									<td class="table-cell">
										<div class="action-buttons">
											<button onclick="editUrl(<%= url.id %>, '<%= url.originalUrl %>')" 
													class="btn btn-sm btn-action btn-edit">
												<i class="fas fa-edit"></i>
												<span>Edit</span>
											</button>
											<button onclick="deleteUrl(<%= url.id %>)" 
													class="btn btn-sm btn-action btn-delete">
												<i class="fas fa-trash"></i>
												<span>Delete</span>
											</button>
										</div>
									</td>
								</tr>
								<% }); %>
							</tbody>
						</table>
					</div>
					<% } else { %>
					<!-- Empty State -->
					<div class="empty-state">
						<div class="empty-icon">
							<i class="fas fa-link"></i>
						</div>
						<h3 class="empty-title">No URLs Yet</h3>
						<p class="empty-description">
							Get started by creating your first shortened URL.<br>
							It only takes a few seconds!
						</p>
						<a href="/" class="btn btn-primary btn-lg empty-cta">
							<i class="fas fa-plus me-2"></i>
							Create First URL
						</a>
					</div>
					<% } %>
				</div>
			</div>
		</div>
	</main>

	<!-- Edit Modal -->
	<div class="modal fade" id="editModal" tabindex="-1">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content custom-modal">
				<div class="modal-header border-0">
					<h5 class="modal-title">
						<i class="fas fa-edit me-2 text-primary"></i>
						Edit URL
					</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<form id="editForm" method="POST">
					<div class="modal-body">
						<div class="mb-3">
							<label class="form-label fw-semibold">
								<i class="fas fa-link me-2 text-primary"></i>
								Redirect URL
							</label>
							<input type="url" 
								   id="editUrlInput" 
								   name="originalUrl" 
								   required
								   class="form-control form-control-lg custom-input">
						</div>
					</div>
					<div class="modal-footer border-0">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
							Cancel
						</button>
						<button type="submit" class="btn btn-primary">
							<i class="fas fa-save me-1"></i>
							Save Changes
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Toast Notification -->
	<div class="toast-container position-fixed top-0 end-0 p-3">
		<div id="toast" class="toast custom-toast" role="alert">
			<div class="toast-header border-0">
				<i id="toastIcon" class="fas fa-check-circle text-success me-2"></i>
				<strong class="me-auto">Notification</strong>
				<button type="button" class="btn-close" data-bs-dismiss="toast"></button>
			</div>
			<div class="toast-body" id="toastMessage">
				Success!
			</div>
		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/main/dashboard/js/index.js"></script>
</body>
</html>